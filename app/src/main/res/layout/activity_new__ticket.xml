<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NewTicket">

    <android.support.v7.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp" />

    <ScrollView
        android:id="@+id/scroollprincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NewTicket">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/amountticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Monto"
                    android:inputType="number"
                    android:textColor="@color/colorTextBlack" />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:id="@+id/spinnerTypeCurrency"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:theme="@style/NewTicket"></Spinner>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NewTicket">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/dateticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Fecha"
                    android:textColor="@color/colorTextBlack" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NewTicket">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/georeferenciaticket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Geolocalizacion"
                    android:textColor="@color/colorTextBlack" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NewTicket">

                <Spinner
                    android:id="@+id/spinnerTypeTycket"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:theme="@style/NewTicket"></Spinner>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/NewTicket">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/observation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observacion"
                    android:textColor="@color/colorTextBlack" />
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/imagebutton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imagentouch" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frameloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationlottiemain"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="material_loader.json"
            app:lottie_loop="true" />

        <ImageView
            android:id="@+id/imagenerror"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/error"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>