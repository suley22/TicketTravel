<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    card_view:cardElevation="5dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorTextWhite">

        <LinearLayout
            android:id="@+id/linearColor"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:background="#AC5045"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_item_nro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="11dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imgdate"
            android:layout_marginTop="11dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/imgmoney"
            android:layout_width="20dp"
            android:layout_height="17dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/tv_item_amount"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="220dp"
            android:src="@drawable/money" />

        <TextView
            android:id="@+id/tv_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/imgdate"
            android:layout_marginLeft="237dp" />

        <ImageView
            android:id="@+id/imgdate"
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_item_Observation"
            android:layout_marginBottom="27dp"
            android:src="@drawable/date" />

        <TextView
            android:id="@+id/tv_item_ticketDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgdate"
            android:layout_toRightOf="@+id/imgdate" />

        <TextView
            android:id="@+id/tv_item_Observation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_item_nro"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="7dp"
            android:maxLength="30"
            android:maxLines="2" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/image_ticket" />
    </RelativeLayout>
</android.support.v7.widget.CardView>