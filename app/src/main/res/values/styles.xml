<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopuOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="RaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EditText" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/colorgris</item>
        <item name="android:textSize">@dimen/editText_TextSize_Login</item>
        <item name="android:textColorPrimary">@color/colorgris</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorgris</item>
        <item name="colorControlActivated">@color/colorgris</item>
    </style>
    <style name="NewTicket" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorgris</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/colorgris</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
